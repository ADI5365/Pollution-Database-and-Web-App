{{!-- Locations Display Table --}}
<div id="browse">
    <h3>Browse People</h3>

    <table id="people-table">
        <thead>
    
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
            </tr>
        </thead>
    
        <tbody>
    
            {{#each data}}
            <tr>
                <td>{{this.person_ID}}</td>
                <td>{{this.age}}</td>
                <td>{{this.location_ID}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
</html>

{{!-- Add new location --}}
<div id="insert">
    <form id="addPerson" method="POST" action="/addPerson">
        <legend><strong>Add Person</strong></legend>
        <fieldset class="fields">
            <label> Age </label> <input type="number" name="input-age">
            <label for="input-location_ID"> Select a City: </label>
            <select name="input-location_ID" id="city">
                <option value="">Select a City</option>
                {{#each locations}}
                <option value="{{this.location_ID}}">{{this.city_name}}</option>
                {{/each}}
            </select>
        </fieldset>
        <input class="btn" type="submit" id="addPerson" value="Add Person">
    </form>
</div>

{{!-- Update person attributes --}}
<div id="update">
    <form id="updatePerson" method="POST" action="/updatePerson">
        <legend><strong>Update Person</strong></legend>
        <fieldset class="fields">
            <label for="person"> Select a Person: </label>
            <select name="input-person_ID" id="person">
                <option value="select">Select the Person's ID</option>
                {{#each people}}
                <option value="{{this.person_ID}}">{{this.person_ID}} {{this.age}}</option>
                {{/each}}
            </select>
            <label> Age </label> <input type="number" name="input-age">
            <label for="city"> Select a City: </label>
            <select name="input-location_ID" id="city">
                <option value="select">Select a City</option>
                {{#each locations}}
                <option value="{{this.location_ID}}">{{this.city_name}}</option>
                {{/each}}
            </select>
        </fieldset>
        <input class="btn" type="submit" id="UpdatePerson" value="Update Person">
    </form>
</div>