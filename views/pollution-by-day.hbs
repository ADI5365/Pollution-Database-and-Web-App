{{!-- Dates with Pollution Data Display Table --}}
<div id="browse">
    <h3>Browse Locations</h3>

    <table>
        <thead>

            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
            </tr>
        </thead>

        <tbody>

            {{#each data}}
            <tr>
                <td>{{this.pollution_ID}}</td>
                <td>{{this.date_recorded}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<!-- Add new date on which data was collected -->
<div id="insert">
    <form id="addPollutionDay">
        <legend><strong>Add Date where Pollution Levels were Recorded</strong></legend>
        <fieldset class="fields">
            <label> Date </label> <input type="date" name="date">
        </fieldset>
        <input class="btn" type="submit" id="addPollutionDay" value="Add Date">
    </form>
</div>